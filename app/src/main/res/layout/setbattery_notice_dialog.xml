<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/dialog_out_radius"
    android:paddingTop="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="输入提醒阈值(30-100)" />

    <EditText
        android:textSize="16sp"
        android:id="@+id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:background="@drawable/batterystats_tv_bg"
        android:padding="10dp"
        android:theme="@style/Platform.MaterialComponents.Light" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_input"
        android:layout_marginTop="15dp"
        android:background="@drawable/dialog_submit_selected_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        android:text="确认"
        android:textColor="#1E7FFB"
        android:textSize="18sp" />
</RelativeLayout>